##############################################
# Navigation (focussing)
##############################################
#
# # Stack up
alt - k : yabai -m window --focus stack.prev || yabai -m window --focus stack.last
# # Stack down
alt - j : yabai -m window --focus stack.next || yabai -m window --focus stack.first

# Windows: Alt + [DIR]
# shift + alt - h : yabai -m window --focus west || yabai -m window --focus last
# shift + alt - j : yabai -m window --focus south || yabai -m window --focus first
# shift + alt - k : yabai -m window --focus north || yabai -m window --focus last
# shift + alt - l : yabai -m window --focus east || yabai -m window --focus first

# Spaces:  Alt + [NUM]
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5
ctrl - 6 : yabai -m space --focus 6
ctrl - 7 : yabai -m space --focus 7
ctrl - 8 : yabai -m space --focus 8
ctrl - 9 : yabai -m space --focus 9
ctrl - 0 : yabai -m space --focus 10

# Cycle through spaces
# alt - n : yabai -m space --focus next || yabai -m space --focus first
# alt - p : yabai -m space --focus prev || yabai -m space --focus last

# Go to specific apps
# Zoom
# alt - z : yabai -m space --focus 1
# iTerm
# alt - e : yabai -m space --focus 8

# Monitors: Ctrl + Alt + [NUM]
alt - u  : yabai -m display --focus 1
alt - i  : yabai -m display --focus 3
alt - o  : yabai -m display --focus 2

# Cycle through monitors
ctrl + alt - n : yabai -m display --focus next || yabai -m display --focus first
ctrl + alt - p : yabai -m display --focus prev || yabai -m display --focus last

##############################################
# Moving
##############################################

# "Swaps" with another Window, obtaining its size and position
# Swap: Ctrl + Alt + [DIR]
ctrl + alt - h : yabai -m window --swap west
ctrl + alt - j : yabai -m window --swap south
ctrl + alt - k : yabai -m window --swap north
ctrl + alt - l : yabai -m window --swap east

# Sends Window to Space and shifts focus
# Send: Shift + Cmd + [NUM]
shift + alt - 1 : yabai -m window --space  1; yabai -m space --focus 1
shift + alt - 2 : yabai -m window --space  2; yabai -m space --focus 2
shift + alt - 3 : yabai -m window --space  3; yabai -m space --focus 3
shift + alt - 4 : yabai -m window --space  4; yabai -m space --focus 4
shift + alt - 5 : yabai -m window --space  5; yabai -m space --focus 5
shift + alt - 6 : yabai -m window --space  6; yabai -m space --focus 6
shift + alt - 7 : yabai -m window --space  7; yabai -m space --focus 7
shift + alt - 8 : yabai -m window --space  8; yabai -m space --focus 8
shift + alt - 9 : yabai -m window --space  9; yabai -m space --focus 9
shift + alt - 0 : yabai -m window --space  10; yabai -m space --focus 10

# Sends Window to Monitor and shifts focus
# Send Monitor: Ctrl + Cmd + [NUM]
shift + alt - u  : yabai -m window --display 1; yabai -m display --focus 1
shift + alt - i  : yabai -m window --display 2; yabai -m display --focus 2
shift + alt - o  : yabai -m window --display 3; yabai -m display --focus 3

# Send to adjacent monitor
ctrl + shift + alt - n  : yabai -m window --display next; yabai -m display --focus next
ctrl + shift + alt - p  : yabai -m window --display 2; yabai -m display --focus 2


# Floating Move
shift + ctrl - a : yabai -m window --move rel:-20:0
shift + ctrl - s : yabai -m window --move rel:0:20
shift + ctrl - w : yabai -m window --move rel:0:-20
shift + ctrl - d : yabai -m window --move rel:20:0

# Rotate
alt - r : yabai -m space --rotate 90

##############################################
# Sizing: Shift + [Alt/Cmd] + [DIR]
##############################################

# Auto
shift + alt - 0 : yabai -m space --balance

# Increase (no decrease options, just resizing the relevant windows)
shift + alt - a : yabai -m window --resize left:-40:0
shift + alt - s : yabai -m window --resize bottom:0:40
shift + alt - w : yabai -m window --resize top:0:-40
shift + alt - d : yabai -m window --resize right:40:0

##############################################
# Toggling
##############################################

# Fullscreen (still includes gaps)
# alt - f : yabai -m window --toggle zoom-fullscreen

# Float and center
# alt - t : yabai -m window --toggle float;\
#           yabai -m window --grid 4:4:1:1:2:2

##############################################
# Floating
##############################################

# Fill
shift + alt - up     : yabai -m window --grid 1:1:0:0:1:1

# Left
shift + alt - left   : yabai -m window --grid 1:2:0:0:1:1

# Right
shift + alt - right  : yabai -m window --grid 1:2:1:0:1:1

# Restart yabai-ish things
shift + alt - r : brew services restart yabai; \
                  brew services restart skhd; \
                  # brew services restart spacebar
