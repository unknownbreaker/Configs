{
  "title": "Hyper key",
  "rules": [
    {
      "description": "Change non_us_backslash key to command+control+option+shift.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "non_us_backslash",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_command", "left_control", "left_option"]
            }
          ]
        }
      ]
    },
    {
      "description": "Change backslash key to command+control+option+shift only when pressed without shift.",
      "manipulators": [
        {
          "from": {
            "key_code": "backslash",
            "modifiers": {
              "mandatory": [
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "backslash"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "backslash",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_command",
                "left_control",
                "left_option"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
