{
  "title": "Hyper key",
  "rules": [
    {
      "description": "Change non_us_backslash key to command+control+option+shift.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "non_us_backslash",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_command", "left_control", "left_option"]
            }
          ]
        }
      ]
    }
  ]
}
