{
  "title": "Modifier keys",
  "rules": [
    {
      "description": "Change semicolon to right_control when pressed with other keys",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "semicolon"
              },
              {
                "any": "key_code"
              }
            ],
            "simultaneous_options": {
              "key_down_order": "strict"
            },
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "semicolon"
            }
          ]
        }
      ]
    },
    {
      "description": "Change quote to right_alt when pressed with other keys",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "quote"
              },
              {
                "any": "key_code"
              }
            ],
            "simultaneous_options": {
              "key_down_order": "strict"
            },
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_alt"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "quote"
            }
          ]
        }
      ]
    },
    {
      "description": "Change tab to left_alt when pressed with other keys.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "tab"
              },
              {
                "any": "key_code"
              }
            ],
            "simultaneous_options": {
              "key_down_order": "strict"
            },
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_alt"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "tab"
            }
          ]
        }
      ]
    }
  ]
}
