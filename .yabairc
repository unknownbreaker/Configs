#!/usr/bin/env sh

# yabai -m config external_bar all:26:0

# global settings
yabai -m config mouse_follows_focus             off
yabai -m config focus_follows_mouse             off
yabai -m config window_placement                second_child
yabai -m config window_topmost                  off
yabai -m config window_shadow                   off
yabai -m config window_border                   on
yabai -m config window_border_placement         exterior
yabai -m config window_border_width             10
yabai -m config window_border_radius            10
yabai -m config active_window_border_color      0xB2EBDBB2
yabai -m config normal_window_border_color      0xB2282828
yabai -m config insert_window_border_color      0xB2EBDBB2
yabai -m config window_opacity                  off
yabai -m config split_ratio                     0.50
yabai -m config auto_balance                    on
yabai -m config mouse_modifier                  fn
yabai -m config mouse_action1                   move
yabai -m config mouse_action2                   resize

# general space settings
yabai -m config layout                          stack
yabai -m config top_padding                     0
yabai -m config bottom_padding                  0
yabai -m config left_padding                    0
yabai -m config right_padding                   0
yabai -m config window_gap                      0

yabai -m config window_topmost                  on
yabai -m config window_shadow                   float

# Space labels
yabai -m space 1 --label "Primary"
yabai -m space 2 --label "Comms"
yabai -m space 3 --label "Tools"
yabai -m space 4 --label "Media"
yabai -m space 5 --label "Social"
yabai -m space 6 --label "Float"
yabai -m space 7 --label "Secondary"

# Space config
yabai -m config --space 2 layout float

# Unmanaged
yabai -m rule --add app="Activity Monitor"      manage=off border=off
yabai -m rule --add app="Charles"               manage=off border=off
yabai -m rule --add app="DaisyDesk"             manage=off border=off
yabai -m rule --add app="Finder"                manage=off border=off
yabai -m rule --add app="Keyboard Maestro"      manage=off border=off
yabai -m rule --add app="Music"                 manage=off border=off
yabai -m rule --add app="Preview"               manage=off border=off
yabai -m rule --add app="QuickTime Player"      manage=off border=off
yabai -m rule --add app="ScreenFlow 9"          manage=off border=off
yabai -m rule --add app="Snagit"                manage=off border=off
yabai -m rule --add app="Things"                manage=off border=off
yabai -m rule --add app="VLC"                   manage=off border=off 
yabai -m rule --add app="^1Password"            manage=off border=off
yabai -m rule --add app="^Karabiner"            manage=off border=off
yabai -m rule --add app="^System Preferences$"  manage=off border=off

# Primary
yabai -m rule --add app="Brave"                 space=1
yabai -m rule --add app="Simulator"             space=1
yabai -m rule --add app="zoom.us"               space=1
yabai -m rule --add app="Docker Desktop"        space=1

yabai -m rule --add app="Google Chrome"         space=3

# Dev Tools
yabai -m rule --add app="iTerm2"                display=2 space=2
yabai -m rule --add app="Microsoft Word"        space=4
yabai -m rule --add app="Sequel Pro"            space=4
yabai -m rule --add app="Postman"               space=4
yabai -m rule --add app="Activity Monitor"      space=4

# Other Tools
yabai -m rule --add app="Logseq"                space=5

# Social
yabai -m rule --add app="Discord"               space=6
yabai -m rule --add app="Signal"                space=6
yabai -m rule --add app="Messages"              space=6
yabai -m rule --add app="Slack"                 space=6

# Media
yabai -m rule --add app="Spotify"               space=7

